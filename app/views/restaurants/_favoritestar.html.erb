<%#

Favorite Star

Render a star to favorite on a restaurant

@param restaurant [Restaurant] The restaurant to favorite

%>
<% if user_signed_in? %>
  <%= link_to favorite_restaurant_path(restaurant), class: "favorite", method: :put do %>
    <% unless current_user.has_favorited?(restaurant) %>
      <svg class="icon star-empty "><use xlink:href="#icon-star-full"></use></svg>
    <% else %>
      <svg class="icon star-full "><use xlink:href="#icon-star-full"></use></svg>
    <% end %>
  <% end %>
<% end %>
