<p id="notice"><%= notice %></p>

<h1>Restaurants</h1>
<%= "You've voted for these restaurants: #{session[:votes]}" %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Cuisine</th>
      <th>Street address</th>
      <th>City</th>
      <th>State</th>
      <th>Postcode</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= link_to restaurant.name, restaurant %></td>
        <td><%= restaurant.cuisine %></td>
        <td><%= restaurant.street_address %></td>
        <td><%= restaurant.city %></td>
        <td><%= restaurant.state %></td>
        <td><%= restaurant.postcode %></td>
        <td class="vote_button">
          <% unless session[:votes].include? restaurant.name %>
            <%= button_to vote_restaurant_path(restaurant, :split => 'will_split'),
                  class: "will hvr-icon-bob hvr-shutter-out-horizontal", method: :put do %>
              <i class="fas fa-thumbs-up hvr-icon"></i>
              <%= restaurant.will_split %><br> Will Split
            <% end %>
          <% end %>
        </td>
        <td class="vote_button">
          <% unless session[:votes].include? restaurant.name %>
            <%= button_to vote_restaurant_path(restaurant, :split => 'wont_split'),
                  class: "wont hvr-icon-bob hvr-shutter-in-horizontal", method: :put do %>
              <i class="fas fa-thumbs-down hvr-icon"></i>
              <%= restaurant.wont_split %><br> Won't Split
            <% end %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Restaurant', new_restaurant_path %>
