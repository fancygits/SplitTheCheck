<%#

Voting Buttons

Render buttons to vote on a restaurant

@param restaurant [Restaurant] The restaurant to vote on

%>

<% will_split = restaurant.will_split %>
<% wont_split = restaurant.wont_split %>
<%= content_tag :div, id: "#{restaurant.id}voting_buttons" do %>

  <% unless current_user.blank? || current_user.has_voted_for?(restaurant) %>
    <%= link_to vote_restaurant_path(restaurant, :split => 'will_split'),
          {class: "hvr-icon-bob hvr-shutter-out-horizontal btn btn-md", method: :put} do %>
      <svg class="icon icon-thumbs-up hvr-icon"><use xlink:href="#icon-thumbs-up"></use></svg>
      <%= will_split %><br> Will Split
    <% end %>

    <%= link_to vote_restaurant_path(restaurant, :split => 'wont_split'),
          class: "hvr-icon-hang hvr-shutter-in-horizontal btn btn-md", method: :put do %>
      <svg viewBox="0 0 25 28" width="200" height="100" class="icon icon-thumbs-down hvr-icon"><use xlink:href="#icon-thumbs-down"></use></svg>
      <%= wont_split %><br> Won't Split
    <% end %>

  <% else %>
    <%= link_to '#', {class: "disabled will btn btn-md btn-outline-success", disabled: true} do %>
      <svg class="icon icon-thumbs-up"><use xlink:href="#icon-thumbs-up"></use></svg>
      <%= will_split %><br> Will Split
    <% end %>

    <%= link_to '#', {class: "disabled wont btn btn-md btn-outline-primary", disabled: true} do %>
      <svg class="icon icon-thumbs-down"><use xlink:href="#icon-thumbs-down"></use></svg>
      <%= wont_split %><br> Won't Split
    <% end %>
  <% end %>
<% end %>
