<h1>Join the community</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "edit needs-validation", novalidate: "novalidate") do |f| %>
  

  <div class="form-group">
    <%= f.label :username %>
    <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "form-control" %>
    <div class="invalid-feedback">
      <%= resource.errors.full_messages_for(:username).first %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    <div class="invalid-feedback">
      <%= resource.errors.full_messages_for(:email).first %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password, raw("Password <em>(#{@minimum_password_length} characters minimum)</em>") %>
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
    <div class="invalid-feedback">
      <%= resource.errors.full_messages_for(:password).first %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    <div class="invalid-feedback">
      <%= resource.errors.full_messages_for(:password_confirmation).first %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", :class => "btn btn-primary" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
