<p id="notice"><%= notice %></p>

<h1>Restaurants</h1>
<%= "You've voted for these restaurants: #{session[:votes]}" %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Cuisine</th>
      <th>Street address</th>
      <th>City</th>
      <th>State</th>
      <th>Postcode</th>
      <th>Will split</th>
      <th>Wont split</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.cuisine %></td>
        <td><%= restaurant.street_address %></td>
        <td><%= restaurant.city %></td>
        <td><%= restaurant.state %></td>
        <td><%= restaurant.postcode %></td>
        <td><%= restaurant.will_split %></td>
        <td><%= restaurant.wont_split %></td>
        <td><%= link_to 'Show', restaurant %></td>
        <td><%= link_to 'Edit', edit_restaurant_path(restaurant) %></td>
        <td><%= button_to "Will Split", vote_restaurant_path(restaurant, :split => 'will_split'), method: :put %></td>
        <td><%= button_to "Won't Split", vote_restaurant_path(restaurant, :split => 'wont_split'), method: :put %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Restaurant', new_restaurant_path %>
