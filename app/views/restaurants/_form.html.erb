<%= form_with(model: restaurant, local: true, class: "edit needs-validation", novalidate: "novalidate") do |form| %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
    <div class="invalid-feedback">
      <%= restaurant.errors.full_messages_for(:name).first %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :cuisine %>
    <%= form.text_field :cuisine, class: "form-control" %>
    <div class="invalid-feedback">
      <%= restaurant.errors.full_messages_for(:cuisine).first %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :street_address %>
    <%= form.text_field :street_address, class: "form-control" %>
    <div class="invalid-feedback">
      <%= restaurant.errors.full_messages_for(:street_address).first %>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-6">
      <%= form.label :city %>
      <%= form.text_field :city, class: "form-control" %>
      <div class="invalid-feedback">
        <%= restaurant.errors.full_messages_for(:city).first %>
      </div>
    </div>

    <div class="form-group col-md-4">
      <%= form.label :state %>
      <%= form.text_field :state, class: "form-control", maxlength: 2 %>
      <div class="invalid-feedback">
        <%= restaurant.errors.full_messages_for(:state).first %>
      </div>
    </div>

    <div class="form-group col-md-2">
      <%= form.label :postcode %>
      <%= form.text_field :postcode, class: "form-control" %>
      <div class="invalid-feedback">
        <%= restaurant.errors.full_messages_for(:postcode).first %>
      </div>
    </div>
  </div>

  <div class="actions">
    <%= form.submit :class => "btn btn-primary" %>
  </div>
<% end %>
